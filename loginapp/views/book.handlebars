<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<form method="post" action="/users/book">
   <div class="form-group">
    <label>Start Date</label>
    <input type="date" class="form-control" name="startdate">
  </div>
  <div class="form-group">
    <label>End Date</label>
    <input type="date" class="form-control" name="enddate">
  </div>
  <div class="form-group">
    <label>Number of ocupants</label><br>
    <div class="radio">
      <label><input type="radio" name="occupants" id="1" value="1" checked>1</label>
    </div>  
    <div class="radio">
      <label><input type="radio" name="occupants" id="2" value="2" checked>2</label>
    </div>  
    <div class="radio">
      <label><input type="radio" name="occupants" id="3+" value="3+" checked>3+</label>
    </div>
  </div>

    <div class="form-group">
      <label>Room type</label><br>
     <div class="radio">
       <label><input type="radio" name="roomtype" value="single" checked>Single: $100 per knight</label>
     </div>  
      <div class="radio">
        <label><input type="radio" name="roomtype" value="double" checked>Double: $200 per knight</label>
      </div>  
      <div class="radio">
        <label><input type="radio" name="roomtype" value="vip" checked>Vip: $400 per knight</label>
      </div>
    </div>


  <button type="submit" class="btn btn-default">Reserve</button>
</form>